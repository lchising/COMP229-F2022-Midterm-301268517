<%- include ../partials/header.ejs %>

<!-- Content  for the add page -->
<div class="container">
  <div class="container mt-3">
    <div class="mt-4 p-5 my-5 border">
      <div class="row">
        <div class="offset-md-3 col-md-6">
          <h1><%=title %></h1>

          <form class="form" method="post">
            <div class="from-group">
              <label for="carnameTextField">Delete by Car Name</label>
              <input
                type="text"
                class="form-control"
                id="carnameTextField"
                placeholder="Enter the Car Name for Deletion"
                name="Carname"
              />
            </div>

            <div class="from-group">
              <label for="pricTextField">Or delete by Price Range</label>
              <input
                type="text"
                class="form-control"
                id="priceTextField"
                placeholder="Enter the Min Price for Deletion"
                name="minprice"
                
              />
              <input
                  type="text"
                  class="form-control"
                  id="priceTextField"
                  placeholder="Enter the Max Price for Deletion"
                  name="maxprice"
                  
               />
            </div> <br>

            <button class="btn btn-primary" type="submit">
              <i class="fa fa-trash"></i>Delete
            </button>

            <a href="/cars" class="btn btn-warning">
              <i class="fa fa-undo"></i>Cancel
            </a>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

